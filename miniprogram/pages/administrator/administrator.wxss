  color: rgba(38, 39, 27, 0.822);
  position: absolute;
  font-family: 华文新魏;
}

.book_list .book_Arthur {
  float: left;
  margin: 125rpx 0rpx 0rpx 18rpx;
  font-size: 28rpx;
  color: rgb(173, 173, 173);
