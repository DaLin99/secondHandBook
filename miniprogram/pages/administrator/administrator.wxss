}

.book_box {
  width: 100%;
}

.book_list {
  width: 100%;
  height: 360rpx;
  border-bottom: 2px solid rgb(246, 246, 246);
  border-top: 2rpx solid rgb(246, 246, 246);
}

.book_hover {
  background: #74726d42;
  color: #fff;
}

.book_list .book_name {
  float: left;
  margin: 25rpx 8rpx 0rpx 8rpx;
