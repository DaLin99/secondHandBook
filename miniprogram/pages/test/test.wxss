/* pages/test/test.wxss */

page {
  line-height: 1.6;

  font-family: -apple-system-font, Helvetica Neue, sans-serif;
}

/*分类导航*/

.search-container {
  display: flex;
  flex-direction: row;
 
}

.nav {
  white-space: nowrap;
  margin: 10px 0px 10px 0px;
}

.nav_item {
  color: rgb(228, 228, 107);
  font-size: 30rpx;
  display: inline-block;
  margin: 30rpx;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.nav_item.active {
  background-color: rgb(167, 207, 169);
}

/*列表样式*/

.btn-left {
  margin-right: 25px;
  float: right;
}

.active {
  background: #ccc;
  font-size: 30rpx;
  color: #fff !important;
  margin: 10rpx 20rpx 0rpx 10rpx;
  background: #c1e7bc !important;
  position: relative;
  -moz-border-radius: 24rpx;
  -webkit-border-radius: 24rpx;
  border-radius: 20rpx;
}

.active:before {
  font-size: 30rpx;
  content: "";
  width: 0;
  height: 0;
  left: 28%;
  top: 70rpx;
  position: absolute;
  border-top: 20rpx solid #c1e7bc;
  border-right: 35rpx solid transparent;
  border-left: 10rpx solid transparent;
}

.nav {
  border: 2rpx solid #fff;
  white-space: nowrap;
  padding: 5rpx 2rpx;
  width: 100%;
  height: 100rpx;
}

.nav_item {
  margin: 10rpx 20rpx 0rpx 10rpx;
  border-radius: 20rpx;
  padding: 15rpx 25rpx;
  font-size: 30rpx;
  display: inline-block;
  background: #f2f2f2;
  color: #aaa;
}

/*搜索框样式*/

.search-bar {
  position: relative;
  padding: 8px 10px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-sizing: border-box;
  background-color: #92d597;
}

.search-bar__label {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 2;
  border-radius: 3px;
  text-align: center;
  color: #fff;
  background: #c1ebc5;
  line-height: 28px;
}

.search-bar__form {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: auto;
  flex: auto;
  border-radius: 5px;
  background: #c1ebc5;
}

.search-bar__box {
  position: relative;
  padding-left: 30px;
  padding-right: 30px;
  width: 100%;
  box-sizing: border-box;
  z-index: 1;

}

.icon-search_in-box {
  position: absolute;
  left: 10px;
  top: 7px;
}

.search-bar__input {
  height: 28px;
  line-height: 28px;
  font-size: 14px;
}

.icon-clear {
  position: absolute;
  top: 0;
  right: 0;
  padding: 7px 8px;
  font-size: 0;
}

.search-bar__cancel-btn {
  margin-left: 10px;
  line-height: 28px;
  color: #09bb07;
  white-space: nowrap;
}

.icon-search {
  margin-right: 8px;
  font-size: inherit;
}

.search-bar__text {
  display: inline-block;
  font-size: 14px;
  vertical-align: middle;
}

/*小尾巴*/

.cell {
  padding: 12px 15px 12px 35px;
}

.cells {
  position: relative;
  margin-top: 1.17647059em;
  background-color: #fff;
  line-height: 1.41176471;
  font-size: 17px;
}

.cells:before {
  top: 0;
  border-top: 1rpx solid #d9d9d9;
}

.cells:after, .cells:before {
  content: " ";
  position: absolute;
  left: 0;
  right: 0;
  height: 1px;
  color: #d9d9d9;
}

.cells:after {
  bottom: 0;
  border-bottom: 1rpx solid #d9d9d9;
}

.cell {
  padding: 10px 15px;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}

.cell:before {
  content: " ";
  position: absolute;
  top: 0;
  right: 0;
  height: 1px;
  border-top: 1rpx solid #d9d9d9;
  color: #d9d9d9;
  left: 15px;
}

.cell:first-child:before {
  display: none;
}

.searchbar-result {
  margin-top: 2rpx;
  font-size: 14px;
}

.searchbar-result:before {
  display: none;
}

.cell__bd {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
}

.cell_active {
  background-color: #9b9b9b;
}

